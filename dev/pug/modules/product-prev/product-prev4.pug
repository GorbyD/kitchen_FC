.product-prev
    img(src="static/images/content/products/product1/prev.jpg").product-prev__img
    .product-prev__content
        a(href="").product-prev__title Блюдо "Smiley", EVA SOLO
        +productPrevLine('Вид упаковки: ','подарочная')
        +productPrevLine('Материал: ','стекло')
        +productPrevLine('Диаметр: ','21 см')
        +productPrevLine('Страна: ','Дания')
        .product-prev__line-price
            span.product-prev__price 8 200 &#8381;
            .product-prev__availability
                +icon('clock','product-prev__icon')
                span Под заказ
        .product-prev__line-action
            .product-prev__action.product-prev__action--favorite
                +icon('favorites','product-prev__icon')
                span В избранное
            .product-prev__action.product-prev__action--comparison
                +icon('comparison','product-prev__icon')
                span Сравнить
    .product-prev__btn
        a(href="").g-btn.g-btn--black В корзину